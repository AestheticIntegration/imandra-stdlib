
(** {1 List} *)

type 'a t = 'a List.t

theorem rev_involutive l = List.rev (List.rev l) = l
[@@induct] [@@rewrite]
;;

theorem range_length x y =
  x < y ==> List.length List.(x -- y) = y-x
  [@@induct functional List.(--)] [@@rw]
;;

theorem append_length a b =
  List.length (a@b) = List.length a + List.length b
  [@@induct] [@@rw]
;;

lemma append_id x =
  x @ [] = x
  [@@induct] [@@rw]
;;

theorem forall_map f g l =
  List.for_all f (List.map g l) = List.for_all (fun x -> f (g x)) l
[@@induct]
[@@rw]
;;

theorem forall_filter f g l =
  List.for_all f (List.filter g l) = List.for_all (fun x -> g x ==> f x) l
[@@induct l]
[@@rw]
;;

theorem exist_map f g l =
  List.exists f (List.map g l) = List.exists (fun x -> f (g x)) l
[@@induct]
[@@rw]
;;
